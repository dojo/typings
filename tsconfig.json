{
	"version": "2.0.3",
	"compilerOptions": {
		"baseUrl": "node_modules",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "umd",
		"moduleResolution": "classic",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"target": "es5"
	},
	"include": [
		"./dojo/**/*.ts",
		"./dijit/**/*.ts",
		"./dojox/**/*.ts",
		"./doh/**/*.ts",
		"./typings/index.d.ts"
	]
}
